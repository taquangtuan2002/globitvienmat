.globits-tree-dropdown .dropdown-trigger > span:after {
  font-size: 12px;
  color: #555;
}

.globits-tree-dropdown .toggle {
  font: normal normal normal 18px/1 "Material Icons";
  color: #555;
  white-space: pre;
  margin-right: 4px;
}

.globits-tree-dropdown .toggle.collapsed::after {
  cursor: pointer;
  content: "\E5CF";
  vertical-align: middle;
}

.globits-tree-dropdown .toggle.expanded::after {
  cursor: pointer;
  content: "\E5CE";
  vertical-align: middle;
}

/* checkbox styles */
.globits-tree-dropdown .checkbox-item {
  position: relative;
  width: 1rem;
  height: 1rem;
  margin-right: 0.75rem;
  cursor: pointer;
  -webkit-appearance: none;
  -moz-appearance: none;
  appearance: none;
  outline: 0;
  vertical-align: middle;
}

.globits-tree-dropdown .checkbox-item:before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
  border: 2px solid #aaa;
  transition: all 0.3s ease-in-out;
}

.globits-tree-dropdown .checkbox-item:checked:before {
  height: 50%;
  -webkit-transform: rotate(-45deg);
  transform: rotate(-45deg);
  border-top-style: none;
  border-right-style: none;
  border-color: #2196f3;
}

.react-dropdown-tree-select {
  .dropdown {
    width: 100%;
    .dropdown-content {
      z-index: 99 !important;
      max-height: 300px;
      overflow-y: auto;
      width: 100%;
    }
    .dropdown-trigger.arrow {
      width: 100%;
    }
    .dropdown-trigger.arrow.bottom:after {
      position: absolute;
      right: 10px;
      top: 10px;
    }
    .dropdown-trigger.arrow.top:after {
      position: absolute;
      right: 10px;
      top: 10px;
    }
    .node {
      white-space: unset !important;
    }
  }
}
