    yearOfCertification: null,
    note: "",

    otherLanguage: null,
    otherLanguageLevel: null,

    conferred: null,
    yearOfConferred: null,

    //tab3 end

    //qua trinh chuc vu
    positions: [
      {
        decisionCode: null,
        decisionDate: null,
        fromDate: null,
        toDate: null,
        position: null,
        department: null,
        allowanceCoefficient: null,
